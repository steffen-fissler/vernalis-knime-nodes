<?xml version="1.0" encoding="UTF-8"?>
<knimeNode icon="./fp_properties.png" type="Manipulator" xmlns="http://knime.org/node/v2.8" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://knime.org/node/v2.8 http://knime.org/node/v2.8.xsd">
    <name>Fingerprint Properties</name>
    
    <shortDescription>
        Extract properties from a fingerprint
    </shortDescription>
    
    <fullDescription>
        <intro><p>This node extracts properties from the selected fingerprint column as described in the dialogue below.</p>
        <p>This node was developed by <a href="http://www.vernalis.com/">Vernalis (Cambridge, UK)</a>.
		For feedback and more information, please contact <a href="mailto:knime@vernalis.com">knime@vernalis.com</a>
		</p>
        </intro>
        
        
        <option name="Select the fingerprint column">The column containing the fingerprint</option>
        <option name="Fingerprint Type">The type of the fingerprint (SparseBitVectorCell or DenseBitVectorCell)</option>
        <option name="Length (No. of Bits)">The length of the fingerprint</option>
        <option name="Cardinality (No. of Set Bits)">The cardinality (the number of set bits) of the fingerprint</option>
       
    </fullDescription>
    
    <ports>
        <inPort index="0" name="Fingerprint">Input table containing the fingerprint column (SparseBitVector or DenseBitVector)</inPort>
        <!-- possibly more input ports here-->
        <outPort index="0" name="Fingerprint properties">Output table with added fingerprint properties</outPort>
        <!-- possibly more output ports here-->
    </ports>    
